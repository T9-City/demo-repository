<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="CustomerNameTextField" prefHeight="400.0" prefWidth="500.0" style="-fx-background-color: #2B3336;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.main.booking.BookingViewController">
    
    <GridPane alignment="CENTER" hgap="10" layoutX="71.0" layoutY="50.0" style="-fx-background-color: #2B3336;" vgap="20" xmlns:fx="http://javafx.com/fxml">
        <padding>
            <Insets bottom="50" left="50" right="50" top="50" />
        </padding>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <!-- Customer Name -->
        <Label style="-fx-text-fill: white;" text="Customer Name" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="customerNameField" promptText="Customer Name" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <!-- Phone Number -->
        <Label style="-fx-text-fill: white;" text="Phone Number" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="phoneNumberField" promptText="Phone Number" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <!-- Number of Guests (Covers) -->
        <Label style="-fx-text-fill: white;" text="Covers" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="numberOfGuestsField" promptText="Number of Guests" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <!-- Booking Time -->
        <Label style="-fx-text-fill: white;" text="Booking Time" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="bookingTimeField" promptText="Booking Time" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5">
            <Button fx:id="cancelButton" prefWidth="65.0" style="-fx-background-color: grey; -fx-text-fill: white;" text="Cancel" />
            <Button fx:id="addBookingButton" style="-fx-background-color: grey; -fx-text-fill: white;" text="Confirm" />
        </HBox>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

     <!-- Title -->
     <Text layoutX="2.0" layoutY="-16.0" style="-fx-fill: white;" text="Create New Booking" x="140.0" y="90.0">
      <font>
         <Font size="24.0" />
      </font>
   </Text>

</AnchorPane>
